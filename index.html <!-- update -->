<body>
  <div class="chat-container">
    <div class="chat-header">WhatsApp Chat Page Clone</div>
    <div class="chat-messages" id="chatMessages">
      <div class="message received">Hey!</div>
      <div class="message sent">Hey there! How's it going?</div>
      <div class="message received">All good, working on something exciting!</div>
      <div class="message sent">Tell me more!</div>
      <div class="message received">Just learning to build a WhatsApp UI ðŸ˜„</div>
      <div class="message sent">Woah! Looks amazing already ðŸ”¥</div>
      <div class="message received">Haha thanks! Adding some cool features too.</div>
      <div class="message sent">You should make it public once done.</div>
      <div class="message received">Yep, planning to add it to GitHub soon.</div>
      <div class="message sent">Great! Share the link with me then.</div>
    </div>
    <div class="chat-input">
      <input type="text" id="messageInput" placeholder="Type a message..." />
      <button onclick="sendMessage()">Send</button>
    </div>
  </div>

  <script>
    const chatMessages = document.getElementById("chatMessages");
    const messageInput = document.getElementById("messageInput");

    function sendMessage() {
      const text = messageInput.value.trim();
      if (text === "") return;

      const messageBubble = document.createElement("div");
      messageBubble.className = "message sent";
      messageBubble.textContent = text;
      chatMessages.appendChild(messageBubble);
      messageInput.value = "";
      chatMessages.scrollTop = chatMessages.scrollHeight;

      setTimeout(() => {
        const replies = [
          "Sounds good!",
          "Tell me more!",
          "That's interesting ðŸ˜„",
          "Cool stuff!",
          "Haha nice one!",
          "Keep going!"
        ];
        const replyText = replies[Math.floor(Math.random() * replies.length)];
        const replyBubble = document.createElement("div");
        replyBubble.className = "message received";
        replyBubble.textContent = replyText;
        chatMessages.appendChild(replyBubble);
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }, 1000);
    }

    messageInput.addEventListener("keydown", (e) => {
      if (e.key === "Enter") sendMessage();
    });
  </script>
</body>
